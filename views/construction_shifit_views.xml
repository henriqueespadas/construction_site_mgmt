<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="construction_shift_view_form" model="ir.ui.view">
        <field name="name">construction.shift.form</field>
        <field name="model">construction.shift</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="construction_shift_view_tree" model="ir.ui.view">
        <field name="name">construction.shift.tree</field>
        <field name="model">construction.shift</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
            </tree>
        </field>
    </record>

</odoo>
