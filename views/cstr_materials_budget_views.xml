<odoo>

    <record id="view_cstr_materials_budget_tree" model="ir.ui.view">
        <field name="name">cstr.materials.budget.tree</field>
        <field name="model">cstr.materials.budget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="material_id"/>
                <field name="supplier_id"/>
                <field name="unit_price"/>
                <field name="quantity"/>
                <field name="total_price"/>
            </tree>
        </field>
    </record>

    <record id="cstr_materials_budget_form_view" model="ir.ui.view">
        <field name="name">cstr.materials.budget.form</field>
        <field name="model">cstr.materials.budget</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="material_id"/>
                        <field name="supplier_id"/>
                        <field name="unit_price"/>
                        <field name="quantity"/>
                        <field name="total_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
