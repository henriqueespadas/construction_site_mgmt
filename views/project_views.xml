<odoo>

    <record id="cstr_project_form_view" model="ir.ui.view">
        <field name="name">cstr.project.form</field>
        <field name="model">cstr.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="budget"/>
                    <field name="costs"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cstr_project_tree_view" model="ir.ui.view">
        <field name="name">cstr.project.tree"</field>
        <field name="model">cstr.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="budget"/>
                <field name="costs"/>
            </tree>
        </field>


    </record>

</odoo>
